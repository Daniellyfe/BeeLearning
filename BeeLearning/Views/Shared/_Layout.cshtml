<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeeLearning</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BeeLearning.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
         @*  <!--comeca aqui--> *@
        <nav class="navbar navbar-expand-md navbar-dark fixed-top " style="background-color: white;">
            <div class="container-fluid">
                <img src="~/Img/bee.png" alt="..." Width="50" Height="50">
                <a class="navbar-brand" href="#" style="color:#fccd35; font-weight:900; font-size: 30px">BEELEARNING</a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li>
                            <a class="dropdown-item" style="color: black; font-weight:400; font-size: 20px" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li>
                            <a class="dropdown-item" style="color: black; font-weight:400; font-size: 20px" asp-area="" asp-controller="Home" asp-action="Quem">QuemSomos</a>
                        </li>
                        <li>
                            <a class="dropdown-item" style="color: black; font-weight:400; font-size: 20px" asp-area="" asp-controller="Beeflixmodels" asp-action="Beeflix">Beeflix</a>
                        </li>
                        <li>
                            <a class="dropdown-item" style="color: black; font-weight:400; font-size: 20px" asp-area="" asp-controller="Redacoes" asp-action="Redacao">Redações</a>
                        </li>
                        <li>
                            <a class="dropdown-item" style="color: black; font-weight:400; font-size: 20px" asp-area="" asp-controller="MapasMentais" asp-action="Mapamental">Redações</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        @* <!--termina aqui --> *@


    </header>




    <div class="container-fluid p-0">
        <main role="main" class="pb-0">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted fixed-bottom" style="background-color:#fccd34">
        <div class="containernav">
            &copy; 2024 - BeeLearning - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

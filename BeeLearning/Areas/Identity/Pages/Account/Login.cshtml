@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<body class="BEEREDACAO" style=" margin-bottom: 150px;">
<h1>@ViewData["Title"]</h1>
<div class="row" style="margin-top: 90px; margin-bottom: 100px;justify-content: center; display: flex;">

    <div class="col" style="display: flex; justify-content: center;">

        <section>
            <form id="account" method="post" style="background-color:white; border: 2px solid #333; border-radius: 8px; font-size: 1em; width:800px;justify-content:center; padding: 15px;">
                <h2 style="color:#FFBA00; text-align: center; font-weight:bold">Faça seu Login</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" style="background-color:white;  border: 5px solid #FFBA00;" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label" style="color:black; font-weight:bold">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger" ></span>
                </div>
                <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" style="background-color:white;  border: 5px solid #FFBA00;" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label" style="color:black; font-weight:bold">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label" style="color:#ffcd00; font-weight:bolder">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg" style="background-color:#FFBA00; color:white;">Login</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="btn">Esqueceu sua senha?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn">Registre-se como um novo usuário</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="btn" style="">Reenviar confirmação por e-mail</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</body>
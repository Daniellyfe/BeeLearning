@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<body class="BEEREDACAO" style=" margin-bottom: 150px;">
    <h1>@ViewData["Title"]</h1>

    <div class="row" style="margin-top: 90px; justify-content: center; display: flex;">

        <div class="col" style="display: flex; justify-content: center;">

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" style="background-color:white; border: 2px solid #333; border-radius: 8px; font-size: 1em; width:800px;justify-content:center; padding: 15px;">
                <h2 style="color:#FFBA00; text-align: center; font-weight:bold">Create a new account.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" style="background-color:white;  border: 5px solid #FFBA00;" class="btn form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" style="color:black; font-weight:bold">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" style="background-color:white;  border: 5px solid #FFBA00;" class="btn form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" style="color:black; font-weight:bold">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" style="background-color:white;  border: 5px solid #FFBA00;" class="btn form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword" style="color:black; font-weight:bold">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg " style="background-color:#FFBA00; color:white;">Register</button>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>